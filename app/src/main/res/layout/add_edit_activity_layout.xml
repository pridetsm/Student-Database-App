<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="30dp">
    <EditText

        android:id="@+id/std_name_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceListItem"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/std_name"
        app:layout_constraintTop_toTopOf="@id/std_name"
        app:layout_constraintHorizontal_bias="0.7"

        />
    <EditText
        android:paddingBottom="10dp"
        android:id="@+id/std_id_edit_text"
        android:layout_width="100dp"
        android:textAppearance="?textAppearanceListItem"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/std_id"
        app:layout_constraintTop_toTopOf="@id/std_id"
        app:layout_constraintHorizontal_bias="0.7"
        />
    <EditText
        android:paddingBottom="10dp"
        android:id="@+id/programme_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceListItem"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/programme"
        app:layout_constraintTop_toTopOf="@id/programme"
        app:layout_constraintHorizontal_bias="0.7"
        />

    <TextView
        android:id="@+id/std_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student name:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/std_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student ID:"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/std_name"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/programme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="programme :"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/std_id"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="done"
        app:layout_constraintTop_toBottomOf="@id/programme_edit_text"
        app:layout_constraintRight_toRightOf="@id/programme_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>





</androidx.constraintlayout.widget.ConstraintLayout>